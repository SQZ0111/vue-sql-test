{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", // Use CommonJS modules
    "moduleResolution": "node", // Use Node.js module resolution
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "./dist" // Output compiled JS here
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
